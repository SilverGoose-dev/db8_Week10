@model List<Product>;
@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>

<a href="/product/AddForm">Add Prodcut</a>

@foreach (Product prod in Model)
{
    <div>
        @prod.name @prod.price
        <a href="/product/detail/@prod.id">Detail</a>
        <a href="/product/delete/@prod.id">Delete</a>
        <a href="/product/editform/@prod.id">Edit</a>
    </div>
}
